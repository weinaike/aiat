{
  "name": "aiat",
  "displayName": "AIAT",
  "description": "AI Agent Toolkit - AgentFlow 智能体服务客户端",
  "version": "0.0.6",
  "publisher": "weinaike",
  "repository": {
    "type": "git",
    "url": "https://github.com/weinaike/aiat.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "AI",
    "Agent",
    "Client",
    "Code Management"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiat.showStatus",
        "title": "AIAT: 显示服务状态"
      },
      {
        "command": "aiat.openSettings",
        "title": "AIAT: 打开配置",
        "icon": "$(gear)"
      },
      {
        "command": "aiat.copyServerInfo",
        "title": "AIAT: 复制服务器配置信息"
      },
      {
        "command": "aiat.connectAgent",
        "title": "AIAT: 连接智能体服务",
        "icon": "$(plug)"
      },
      {
        "command": "aiat.disconnectAgent",
        "title": "AIAT: 断开智能体服务",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "aiat.openChat",
        "title": "AIAT: 打开消息面板",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiat.switchToRun",
        "title": "AIAT: 切换到指定Run的消息"
      },
      {
        "command": "aiat.refreshHistory",
        "title": "AIAT: 刷新历史消息",
        "icon": "$(refresh)"
      },
      {
        "command": "aiat.clearHistory",
        "title": "AIAT: 清空历史消息",
        "icon": "$(trash)"
      },
      {
        "command": "aiat.deleteHistory",
        "title": "删除",
        "icon": "$(trash)"
      },
      {
        "command": "aiat.showStorageStats",
        "title": "AIAT: 显示历史统计",
        "icon": "$(info)"
      }
    ],
    "configuration": {
      "title": "AIAT",
      "properties": {
        "aiat.mcpTunnel.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用 MCP 隧道模式，通过公网服务器中转 MCP 请求，无需开放本地端口。",
          "order": 1
        },
        "aiat.enableFileOperations": {
          "type": "boolean",
          "default": true,
          "description": "启用文件操作工具"
        },
        "aiat.enableCodeSearch": {
          "type": "boolean",
          "default": true,
          "description": "启用代码搜索工具"
        },
        "aiat.enableTerminal": {
          "type": "boolean",
          "default": true,
          "description": "启用终端操作工具"
        },
        "aiat.agentServer.url": {
          "type": "string",
          "default": "ws://agent-flow.dev.csst.lab.zverse.space:32080",
          "description": "后端智能体服务地址（WebSocket）",
          "order": 2
        },
        "aiat.agentServer.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "扩展激活时自动连接智能体服务",
          "order": 3
        },
        "aiat.logging.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "启用调试模式下的详细日志输出",
          "order": 10
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiat",
          "title": "AIAT",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "aiat": [
        {
          "id": "aiat.status",
          "name": "工具服务状态"
        },
        {
          "id": "aiat.config",
          "name": "连接配置"
        },
        {
          "id": "aiat.tools",
          "name": "可用工具"
        },
        {
          "id": "aiat.history",
          "name": "历史消息"
        },
        {
          "id": "aiat.chat",
          "name": "智能体消息",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiat.openSettings",
          "when": "view == aiat.config",
          "group": "navigation"
        },
        {
          "command": "aiat.refreshHistory",
          "when": "view == aiat.history",
          "group": "navigation"
        },
        {
          "command": "aiat.clearHistory",
          "when": "view == aiat.history",
          "group": "navigation"
        },
        {
          "command": "aiat.showStorageStats",
          "when": "view == aiat.history",
          "group": "navigation"
        },
        {
          "command": "aiat.connectAgent",
          "when": "view == aiat.chat",
          "group": "navigation"
        },
        {
          "command": "aiat.disconnectAgent",
          "when": "view == aiat.chat",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aiat.deleteHistory",
          "when": "view == aiat.history",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "./scripts/publish.sh",
    "publish:vsix": "./scripts/publish.sh -m"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "sharp": "^0.34.5",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
